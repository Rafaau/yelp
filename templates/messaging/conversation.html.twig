{% extends 'base.html.twig' %}
{% block body %}
    <div class="relative border-t h-screen pt-20">
        <div class="w-1/3 mx-auto border-b pb-4">
            <div class="flex items-center space-x-4">
                <img src="{{ asset('build/images/avatar_default.19e0a8ff.jpg') }}" class="rounded-full w-16 h-16 border">
                <p class="font-semibold text-2xl">{{ receiver.username }}</p>
            </div>
        </div>
        <div class="overflow-y-scroll w-1/3 mx-auto h-[69vh] hide-scrollbar py-4 px-3 pb-16">
            <p class="font-roboto-light text-sm mb-2">
                This is the beginning of your message history with <strong>{{ receiver.username }}</strong>
            </p>
            <div id="messages-container">
                {% for message in messages %}
                    <div class="flex space-x-3">
                        {% if loop.index == 1 or messages[loop.index - 2].sender.id != message.sender.id %}
                            <img src="{{ asset('build/images/avatar_default.19e0a8ff.jpg') }}" class="rounded-full w-10 h-10 border mt-3">
                        {% else %}
                            <div class="w-12"></div>
                        {% endif %}
                        <div class="w-full">
                            {% if loop.index == 1 or messages[loop.index - 2].sender.id != message.sender.id %}
                                <div class="font-semibold text-sm flex items-center mt-3">
                                    {{ message.sender.username }}
                                    <span class="ml-auto text-xs font-roboto-light text-zinc-500">{{ message.postDate|date('F d') }}</span>
                                </div>
                            {% endif %}
                            <p class="font-roboto-light text-sm">{{ message.content }}</p>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
        <div class="w-1/3 mx-auto absolute bottom-0 pb-1 left-1/3 bg-zinc-100">
            <div id="receiver-id" class="hidden">{{ receiver.id }}</div>
            <div id="last-sender" class="hidden">{{ messages|length > 0 ? messages[messages|length - 1].sender.id == app.user.id : 0 }}</div>
            <div class="border-zinc-300 border rounded flex items-center">
                <input
                    id="message-input" 
                    class="outline-none px-4 py-2 w-[90%] bg-transparent" 
                    type="text" 
                    placeholder="Type a message">
                <i id="send-message-btn" class="fa-solid fa-paper-plane ml-auto text-red-600 text-xl px-3 pt-1 cursor-pointer"></i>
            </div>
        </div>
    </div>
{% endblock %}